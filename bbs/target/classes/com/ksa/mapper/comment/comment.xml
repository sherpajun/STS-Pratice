<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ksa.fullstack.comment.dao.CommentDao">
	<insert id="commentWrite" parameterType="comment">
		insert into comments
		values(comment_seq.nextval,#{id},#{commentContent},sysdate,#{articleNum})
	</insert>
	<select id="commentRead" parameterType="java.util.HashMap"
		resultType="comment">
		select commentNum, id, commentContent, commentDate
		from comments
		where articleNum=#{articleNum}
		and rownum between 1 and #{commentRow}
		order by commentNum desc
	</select>
</mapper>